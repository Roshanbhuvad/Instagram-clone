<body style="background:#f9f9f9">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="row">
					<div class="col-md-4">
						<img style="border-radius:50%;border:1px solid #ededed;" src="{{graphql.user.profile_pic_url}}">

					</div>
					<div class="col-md-8">
						<h1 style="font-size:32px;line-height:40px;font-weight:200;">{{graphql.user.username}}</h1>
						<div class="row">
							<div class="col-md-3">
								<strong>{{graphql.user.edge_owner_to_timeline_media.count}}</strong> <span>posts</span>	
							</div>
							<div class="col-md-3">
								<strong>{{graphql.user.edge_followed_by.count}}</strong> <span>followers</span>
							</div>
							<div class="col-md-3">
								<strong>{{graphql.user.edge_follow.count}}</strong> <span>following</span>
							</div>
						</div>
						<p style="margin-top:24px">
							{{graphql.user.biography}} 
						</p>
				</div>
			</div>
				<div class="row">
					{{#graphql.user.edge_owner_to_timeline_media.edges}}
					<div class="col-md-4">
						<div style="padding:12px">
						<img style="width:100%" src="{{node.thumbnail_src}}"/>
						</div>
				</div>
				{{/graphql.user.edge_owner_to_timeline_media.edges}}
			</div>
		</div> 
		</div>
	</div>
	
</body>
</html>
